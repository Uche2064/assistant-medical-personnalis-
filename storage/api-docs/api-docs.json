{
    "openapi": "3.0.0",
    "info": {
        "title": "SUNU Santé API Documentation",
        "description": "API pour le projet Zéro Papier de SUNU Santé",
        "contact": {
            "email": "support@sunusante.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/demandes-adhesion": {
            "post": {
                "tags": [
                    "Demandes Adhesion"
                ],
                "summary": "Soumettre une nouvelle demande d'adhésion",
                "description": "Crée une nouvelle demande d'adhésion avec les réponses au questionnaire dynamique. Les questions dépendent du `type_demandeur`.",
                "operationId": "46be0a0f2e0f2184392c8e7b6b19eeb2",
                "requestBody": {
                    "description": "Données de la demande d'adhésion",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "type_demandeur",
                                    "reponses"
                                ],
                                "properties": {
                                    "type_demandeur": {
                                        "description": "Le type de la personne qui fait la demande.",
                                        "type": "string",
                                        "example": "physique"
                                    },
                                    "reponses": {
                                        "description": "Un objet où les clés sont les IDs des questions et les valeurs sont les réponses. Pour les fichiers, la valeur est l'upload du fichier.",
                                        "type": "object",
                                        "example": {
                                            "1": "Doe",
                                            "2": "John",
                                            "6": "(fichier binaire)"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Demande soumise avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "demande_id": {
                                            "type": "integer",
                                            "example": 123
                                        },
                                        "statut": {
                                            "type": "string",
                                            "example": "en_attente"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation des données."
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Demandes Adhesion",
            "description": "Demandes Adhesion"
        }
    ]
}